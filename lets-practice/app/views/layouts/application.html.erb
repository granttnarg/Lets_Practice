    <script>
      function revealComments() {
      comments = document.querySelectorAll("#hidden")
      comments.forEach((comment) => {
        if (comment.classList.contains("hidden")) {
          return comment.classList.remove("hidden");
        } else {
          return comment.classList.add("hidden")
        }

      })
    };
    </script>

    <script>
      function openNav() {
      if (document.getElementById("mySidenav").style.width === "380px"){
        revealComments();
          return document.getElementById("mySidenav").style.width = "150px";
        } else {
        revealComments();
          return document.getElementById("mySidenav").style.width = "380px"
        }
      };
    </script>

